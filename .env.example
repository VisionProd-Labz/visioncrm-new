# ============================================================================
# VisionCRM - Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="postgresql://user:password@host:5432/database?pgbouncer=true&connection_limit=1"

# Production (Supabase example)
# DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres?pgbouncer=true"

# ============================================================================
# AUTHENTICATION (NextAuth.js)
# ============================================================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl" # Generate: openssl rand -base64 32

# ============================================================================
# SOCIAL LOGIN & OAUTH
# ============================================================================

# Google OAuth (Social Login + Gmail email sending)
# Setup: https://console.cloud.google.com/apis/credentials
# Redirect URIs for Social Login:
#   - http://localhost:3000/api/auth/callback/google (dev)
#   - https://yourdomain.com/api/auth/callback/google (prod)
# Redirect URIs for Gmail:
#   - http://localhost:3000/api/email/oauth/gmail/callback
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Facebook OAuth (Social Login)
# Setup: https://developers.facebook.com/apps/
# Valid OAuth Redirect URIs:
#   - http://localhost:3000/api/auth/callback/facebook
#   - https://yourdomain.com/api/auth/callback/facebook
FACEBOOK_CLIENT_ID=""
FACEBOOK_CLIENT_SECRET=""

# LinkedIn OAuth (Social Login)
# Setup: https://www.linkedin.com/developers/apps
# Redirect URLs:
#   - http://localhost:3000/api/auth/callback/linkedin
#   - https://yourdomain.com/api/auth/callback/linkedin
LINKEDIN_CLIENT_ID=""
LINKEDIN_CLIENT_SECRET=""

# Twitter/X OAuth (Social Login)
# Setup: https://developer.twitter.com/en/portal/dashboard
# Callback URLs (OAuth 2.0):
#   - http://localhost:3000/api/auth/callback/twitter
#   - https://yourdomain.com/api/auth/callback/twitter
TWITTER_CLIENT_ID=""
TWITTER_CLIENT_SECRET=""

# ============================================================================
# AI - GEMINI
# ============================================================================
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="AIza-your-gemini-api-key-here"

# ============================================================================
# PAYMENTS - STRIPE
# ============================================================================
# Dashboard: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..." # From Stripe CLI or Dashboard
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Price IDs (create in Stripe Dashboard)
NEXT_PUBLIC_STRIPE_PRICE_STARTER="price_..."
NEXT_PUBLIC_STRIPE_PRICE_PRO="price_..."
NEXT_PUBLIC_STRIPE_PRICE_ENTERPRISE="price_..."

# ============================================================================
# COMMUNICATION - TWILIO (WhatsApp)
# ============================================================================
# Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN=""
TWILIO_WHATSAPP_NUMBER="+14155238886"

# ============================================================================
# EMAIL - RESEND
# ============================================================================
# Dashboard: https://resend.com/api-keys
RESEND_API_KEY="re_..."
RESEND_FROM_EMAIL="VisionCRM <noreply@visioncrm.app>"

# ============================================================================
# OCR - GOOGLE CLOUD VISION
# ============================================================================
# Enable API: https://console.cloud.google.com/apis/library/vision.googleapis.com
GOOGLE_CLOUD_PROJECT_ID=""
GOOGLE_CLOUD_VISION_KEY="" # Or use service account JSON

# ============================================================================
# CACHE - UPSTASH REDIS
# ============================================================================
# Create database: https://console.upstash.com/
UPSTASH_REDIS_REST_URL="https://..."
UPSTASH_REDIS_REST_TOKEN=""

# ============================================================================
# MONITORING - SENTRY (optional)
# ============================================================================
# Project: https://sentry.io/
SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""
SENTRY_AUTH_TOKEN=""

# ============================================================================
# ANALYTICS - VERCEL (optional)
# ============================================================================
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# ============================================================================
# FEATURE FLAGS
# ============================================================================
NEXT_PUBLIC_ENABLE_AI_ASSISTANT="true"
NEXT_PUBLIC_ENABLE_OCR="true"
NEXT_PUBLIC_ENABLE_WHATSAPP="true"
NEXT_PUBLIC_MAINTENANCE_MODE="false"

# ============================================================================
# DEVELOPMENT
# ============================================================================
NODE_ENV="development" # production | development | test
LOG_LEVEL="debug"      # error | warn | info | debug
