# Configuration de chiffrement
ENCRYPTION_MASTER_KEY=your_64_character_hex_master_key_here
NODE_ENV=production

# Configuration TLS/SSL
TLS_PRIVATE_KEY_PATH=/path/to/private/key.pem
TLS_CERTIFICATE_PATH=/path/to/certificate.pem
TLS_CA_PATH=/path/to/ca-bundle.pem

# Origines autorisées pour CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Configuration de base de données
MONGODB_URI=mongodb://localhost:27017/visioncrm
DB_ENCRYPTION_KEY=your_database_encryption_key

# Configuration JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# Configuration Redis (pour les sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Configuration des logs
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/visioncrm/app.log
